CREATE TRIGGER [{{Schema}}].[{{Schema}}_{{TableName}}_TR_DeleteTracking] ON [{{Schema}}].[{{TableName}}] AFTER DELETE AS
BEGIN
    IF @@rowcount = 0 
        RETURN

    SET NOCOUNT ON

    INSERT INTO [changes].[{{Schema}}_{{TableName}}_TrackedChange]({{#ChangeDataColumns}}Old{{ColumnName}}, {{/ChangeDataColumns}}Id, ChangeVersion)
    SELECT  {{#ChangeDataColumns}}d.{{ColumnName}}, {{/ChangeDataColumns}}Id, (NEXT VALUE FOR [changes].[ChangeVersionSequence])
    FROM    deleted d
            INNER JOIN {{BaseTableSchema}}.{{BaseTableName}} b ON {{#ChangeDataColumns}}{{^IsFirst}} AND {{/IsFirst}}d.{{ColumnName}} = b.{{BaseColumnName}}{{/ChangeDataColumns}}
END
GO

